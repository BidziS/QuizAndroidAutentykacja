<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_menu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/tloand2"
    tools:context="com.bidzis.quizandroid.MenuActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:text="QUIZ"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:id="@+id/tvQuizMenuActivity"
        android:textSize="72sp"
        android:fontFamily="casual"
        android:textStyle="normal|bold|italic"
        android:textAlignment="center"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="Opcje"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:id="@+id/btOpcje"
        android:layout_below="@+id/btRankingMenuActivity"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="@android:color/background_dark"
        android:textSize="32dp"
        android:fontFamily="casual"
        android:alpha="0.5"
        />

    <Button
        android:text="O Programie"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btOpcje"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp"
        android:id="@+id/btOProgramieMenuActivity"
        android:textColor="@android:color/black"
        android:fontFamily="casual"
        android:textSize="32dp"
        android:alpha="0.5"
        />

    <Button
        android:text="Wyjscie"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btOProgramieMenuActivity"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp"
        android:id="@+id/btWyjscieMenuActivity"
        android:textColor="@android:color/background_dark"
        android:fontFamily="casual"
        android:textSize="32dp"
        android:alpha="0.5"
        />

    <Button
        android:text="Ranking"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:id="@+id/btRankingMenuActivity"
        android:layout_below="@+id/btGrajMenuActivity"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="@android:color/background_dark"
        android:textSize="32dp"
        android:fontFamily="casual"
        android:alpha="0.5"
        />

    <Button
        android:text="Graj"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:id="@+id/btGrajMenuActivity"
        android:textColor="@android:color/background_dark"
        android:textSize="32dp"
        android:fontFamily="casual"
        android:alpha="0.5"
        android:layout_alignTop="@+id/tvQuizMenuActivity"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>
    </ScrollView>
</RelativeLayout>
